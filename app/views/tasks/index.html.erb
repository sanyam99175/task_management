
<a href="<%= new_task_path %>" class="btn btn-dark mb-4">Create a new task</a>
<div class="row">
  <% @tasks.each do |task| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
         <div class="row">
          <h5 class="col card-title"><%= task.title %></h5>
          <% if task.status == "backlog" %>
            <% badge_class = "badge-danger" %>
          <% elsif task.status == "done" %>
            <% badge_class = "badge-success" %>
          <% else %>
            <% badge_class = "badge-warning" %>
          <% end %>
          <span style="float:right; height: 21px; width: 80px;" class="badge badge-pill <%= badge_class %>"><%= task.status %></span>
         </div>
          <p class="card-text"><%= task.description %></p>
          <p class="card-text"><small class="text-muted">Due on: <%= task.deadline.to_date %></small></p>
          <a href="<%= task_path(task) %>" class="btn btn-dark">View Task</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
